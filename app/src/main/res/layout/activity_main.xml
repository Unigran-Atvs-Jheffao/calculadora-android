<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="0"
            android:layout_width="374dp"
            android:layout_height="43dp" android:id="@+id/last_val"
            android:textSize="34sp" android:textAlignment="textEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="64dp" android:textColor="#7C7C7C"/>
    <TextView
            android:text="0"
            android:layout_width="377dp"
            android:layout_height="82dp" android:id="@+id/value"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="60sp" android:textAlignment="textEnd"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="125dp"/>
    <TableLayout
            android:layout_width="396dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tableLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/value" android:layout_marginTop="8dp">

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="C"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonClear"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonNegate" android:text="+/-"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="%"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonPercentage"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="/"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonDiv"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button7"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="8"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button8"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="9"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button9"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="*"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonMult"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button4" android:text="4"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button5" android:text="5"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="6"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button6"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="-"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonSub"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button1"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="2"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="3"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="+"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonPlus"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_width="382dp" android:layout_height="match_parent">
            <Button
                    android:text="â†"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonBackspace"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="0"
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/button0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="."
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonDecimal"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
            <Button
                    android:text="="
                    android:layout_width="98dp"
                    android:layout_height="98dp" android:id="@+id/buttonEq"
                    style="@style/Widget.AppCompat.Button.Borderless" android:backgroundTintMode="src_in"
                    android:backgroundTint="#CA6C24" android:background="@android:drawable/btn_default"
                    android:textAlignment="center" android:textSize="20sp"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>